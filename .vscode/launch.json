    "version": "0.2.0",
    "configurations": [
        {
            "name": "New Project",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "project", 
                "new",
                "-d", "${workspaceFolder}/.iac-test",
                "-n", "My Project",
                "-b", "bp-aws-nearform",
                "-e", "develop",
                "-e", "production",                
                "-r", "us-east-1",
                "-r", "us-west-1",
                "-s", "my-stack"
            ]
        },
        {
            "name": "New Project - Remote State",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "project", 
                "new",
                "-d", "${workspaceFolder}/.iac-test",
                "-n", "My Project",
                "-b", "bp-aws-nearform",
                "-e", "develop",
                "-e", "production",                
                "-r", "us-east-1",
                "-r", "us-west-1",
                "-s", "my-stack",
                "-t", 
                "-u", "my-bucket",
                "-v", "us-east-1"
            ]
        },
        {
            "name": "New Blueprint",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "blueprint",
                "new",
                "-d", "${workspaceFolder}/.iac-test",
                "-n", "BP AWS Nearform",
                "-s", "my-stack",
                "-r", "us-east-1",
                "-r", "us-west-1",
            ]
        },
        {
            "name": "Include Module",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "module", 
                "include",
                "-d", "${workspaceFolder}/.iac-test/bp-aws-nearform/my-stack/_any",
                "-n", "my-vpc",
                "-u", "git@github.com:terraform-aws-modules/terraform-aws-vpc.git"
            ]
        },
        {
            "name": "Run Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}",
            "showLog": true
        },
        {
            "name": "Init Project",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "project", 
                "init",
                "-d", "${workspaceFolder}/.iac-test/my-project"
            ]
        },
        {
            "name": "Init Project With Links",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "project", 
                "init",
                "-d", "${workspaceFolder}/.iac-test/my-project",
                "-l"
            ]
        },
        {
            "name": "Clone Environment",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "project", 
                "clone",
                "env",
                "-d", "${workspaceFolder}/.iac-test/my-project",
                "-n", "pr-1",
                "-f", "develop",
            ]
        },
        {
            "name": "Clone Environment Techbase",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "project", 
                "clone",
                "env",
                "-d", "/home/g/projects/nearform/techbase/infra/iac-techbase-hasura",
                "-n", "pr000",
                "-f", "_pr",
            ]
        }
    ]
}
