    "version": "0.2.0",
    "configurations": [
        {
            "name": "New Project",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "project", 
                "new",
                "-n", "My Project",
                "-d", ".iac-test",
                "-s", "my-stack",
                "-b", "git@github.com:spycode-io/sample-bp.git",
                "-v", "v0.0.0",
                "-k", "v0.0.1"
            ]
        },
        {
            "name": "New Blueprint",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "blueprint",
                "new",
                "-b", "git@github.com:spycode-io/my-business-bp.git",
                "-n", "my-business-bp",
                "-s", "my-stack"
            ]
        },
        {
            "name": "New Module",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "module", 
                "new",
                "-d", ".iac-test",
                "-n", "My VPC",
                "-m", "vpc"
            ]
        },
        {
            "name": "Run Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}",
            "showLog": true
        },
        {
            "name": "Init Project",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "project", 
                "init",
                "-d", "/home/g/Projects/nearform/demo/prj-simple-web-app-ii"
            ]
        },
        {
            "name": "Init Project With Links",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "project", 
                "init",
                "-d", "/home/g/Projects/nearform/demo/prj-simple-web-app-ii",
                "-l", "true"
            ]
        },
    ]
}
