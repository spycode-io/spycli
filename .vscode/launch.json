    "version": "0.2.0",
    "configurations": [
        {
            "name": "New Project",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}/../main.go",
            "args": [
                "project", 
                "new",
                "-n", "My Project",
                "-d", ".iac-test",
                "-s", "my-stack",
                "-b", "git@github.com:spycode-io/sample-bp.git",
                "-v", "v0.0.0"
            ]
        },
        {
            "name": "New Blueprint",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}/../main.go",
            "args": [
                "blueprint", 
                "new",
                "-b", "git@github.com:spycode-io/sample-bp.git",
                "-d", ".iac-test",
            ]
        },
        {
            "name": "New Module",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}/../main.go",
            "args": [
                "module", 
                "new",
                "-d", ".iac-test",
                "-n", "My VNET",
                "-m", "aws/vnet",
                "-l", "git@github.com:spycode-io/tf-modules.git",
                "-v", "master",
                "-s", "aws"
            ]
        },
        {
            "name": "Run Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}",
            "showLog": true
        }
    ]
}
